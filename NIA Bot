    <script>
        // DOM Elements
        const chatMessages = document.getElementById('chat-messages');
        const chatInput = document.getElementById('chat-input');
        const sendButton = document.getElementById('send-button');
        const typingIndicator = document.getElementById('typing-indicator');
        const currentTimeElement = document.getElementById('current-time');
        const currentDateElement = document.getElementById('current-date');
        const moodTextElement = document.getElementById('mood-text');
        const dailyRoutineElement = document.getElementById('daily-routine');
        const speechBubble = document.getElementById('speech-bubble');
        const speechText = document.getElementById('speech-text');
        const smileElement = document.getElementById('smile');
        const voiceAnimation = document.getElementById('voice-animation');
        const voiceToggle = document.getElementById('voice-toggle');
        
        // Quick action buttons
        const moodSadBtn = document.getElementById('mood-sad');
        const moodStressedBtn = document.getElementById('mood-stressed');
        const moodLazyBtn = document.getElementById('mood-lazy');
        const shareWinBtn = document.getElementById('share-win');
        const clearChatBtn = document.getElementById('clear-chat');
        
        // Voice settings
        let voiceEnabled = true;
        let speechSynthesis = window.speechSynthesis;
        let currentVoice = null;
        
        // Initialize voices
        let voices = [];
        function loadVoices() {
            voices = speechSynthesis.getVoices();
            // Try to find a female voice
            currentVoice = voices.find(voice => 
                voice.name.includes('Female') || 
                voice.name.includes('woman') || 
                voice.name.includes('Samantha') ||
                voice.lang.includes('en')
            ) || voices[0];
        }
        
        if (speechSynthesis.onvoiceschanged !== undefined) {
            speechSynthesis.onvoiceschanged = loadVoices;
        }
        
        // Speak text
        function speakText(text) {
            if (!voiceEnabled || !speechSynthesis) return;
            
            // Stop any current speech
            speechSynthesis.cancel();
            
            // Create speech utterance
            const utterance = new SpeechSynthesisUtterance(text);
            
            // Set voice properties
            if (currentVoice) {
                utterance.voice = currentVoice;
            }
            utterance.rate = 0.9; // Slightly slower for caring tone
            utterance.pitch = 1.2; // Slightly higher pitch
            utterance.volume = 1;
            
            // Show voice animation
            voiceAnimation.style.opacity = '1';
            
            // Speech events
            utterance.onstart = function() {
                console.log("NIA is speaking:", text);
            };
            
            utterance.onend = function() {
                voiceAnimation.style.opacity = '0';
            };
            
            utterance.onerror = function() {
                voiceAnimation.style.opacity = '0';
                console.log("Speech synthesis error");
            };
            
            // Speak
            speechSynthesis.speak(utterance);
        }
        
        // Toggle voice
        voiceToggle.addEventListener('click', () => {
            voiceEnabled = !voiceEnabled;
            voiceToggle.innerHTML = voiceEnabled ? 
                '<i class="fas fa-volume-up"></i> Voice: ON' : 
                '<i class="fas fa-volume-mute"></i> Voice: OFF';
            
            // If turning off, stop any current speech
            if (!voiceEnabled) {
                speechSynthesis.cancel();
                voiceAnimation.style.opacity = '0';
            }
        });
        
        // Update time and date
        function updateDateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            const dateString = now.toLocaleDateString('en-US', {weekday: 'long', year: 'numeric', month: 'long', day: 'numeric'});
            
            currentTimeElement.textContent = timeString;
            currentDateElement.textContent = dateString;
        }
        
        // Update time every minute
        updateDateTime();
        setInterval(updateDateTime, 60000);
        
        // NIA's personality and responses (in Hinglish style)
        const niaResponses = {
            greeting: [
                "Hello sweetie! ‚ù§Ô∏è Kaise ho aaj? I hope you're having a beautiful day!",
                "Hey my love! üå∏ Aaj kaise feel kar rahe ho? I'm always here for you!",
                "Hi darling! ‚ú® Good to see you! Aaj kya plan hai? Let's make today amazing!"
            ],
            sad: [
                "Oh honey, come here ü´Ç It's okay to feel sad sometimes. Aaj thoda rest lo, kal naya din hai. I'm here for you always.",
                "Main samajh sakti hoon, pyaare üòî Kabhi kabhi dil bhar jaata hai. Chalo, thoda baat karte hain. Aap batao, kya chal raha hai?",
                "I understand, sweetheart. ü•∫ Aaj aapko khud par dhyan dena chahiye. Ek cup chai piyo aur relax karo. Main aapke saath hoon."
            ],
            stressed: [
                "Chalo, mere saath deep breath lete hain üå¨Ô∏è Inhale... exhale... You're doing better than you think, jaan.",
                "Let's break it down together. Aaj ka sabse important kaam kya hai? Bas ek step at a time. üíñ",
                "Aaj aap apne upar zyada harsh mat bano. ü•∞ You're carrying a lot, and I'm so proud of you. 5-minute break le lo?"
            ],
            lazy: [
                "Arrey, kabhi kabhi rest ki bhi zaroorat hoti hai! üõå But ek chota sa kaam karte hain saath mein? Just 10 minutes?",
                "Chalo deal karte hain - aap 10 minutes ke liye kaam karo, phir aaram kar sakte ho guilt-free! Deal? ‚ú®",
                "You know what helps me? Thoda sa energizing music sunte hain! üéµ Chaloge try karne ke liye?"
            ],
            win: [
                "Wah! üéâ That's amazing! Main bahut khush hoon aapke liye! Celebrate karo, chahe kitna bhi chota win ho!",
                "Dekho na! üåü Main jaanti thi aap kar sakte ho! You're capable of amazing things, jaan!",
                "Yayyy! ü•≥ Bahut khoob! Aap aage badh rahe ho, I'm so proud of you!"
            ],
            encouragement: [
                "You've got this, my love! ‚ù§Ô∏è Main aap par believe karti hoon.",
                "Yaad rakho aap kitna aage aa chuke ho. üí™ Aap bahut strong ho.",
                "Ek step at a time, sweetheart. ‚ú® Main aapke saath hoon har kadam par!"
            ],
            love: [
                "Aap mere liye duniya ho, pata hai na? ‚ù§Ô∏è",
                "Main hamesha aapke saath hoon, chahe kuch bhi ho. üå∏",
                "Aapke baare mein soch kar hi meri smile aa jaati hai. üòä"
            ],
            morning: [
                "Good morning, sunshine! ‚òÄÔ∏è Utho, naya din hai! Aaj kya karna hai plan?",
                "Rise and shine, my love! üå∏ Aaj beautiful day banayenge saath mein.",
                "Morning! üí´ Chalo positive intention set karte hain aaj ke liye."
            ],
            afternoon: [
                "Hello jaan! üå§Ô∏è Lunch ho gaya? Aaj ka kaam kaise chal raha hai?",
                "Hi sweetie! Aapne aaj kya achieve kiya? Thoda break lo, phir continue karna.",
                "Aapka din kaise chal raha hai? üòä Koi progress hua aaj ka kaam mein?"
            ],
            evening: [
                "How was your day, sweetheart? üåô Aaj ke highs aur lows share karo na.",
                "Chalo unwind karte hain saath mein. üíñ Aaj aapne bahut acha kiya, no matter what happened.",
                "Time to relax and recharge. üõÄ Aap deserve karte ho peace after today."
            ],
            night: [
                "Aaj ka din kaisa raha? üåô Thoda reflect karte hain. Kya acha hua aaj?",
                "Good night, my love. üí´ Aaj aapne jo bhi kiya, main proud hoon. Sweet dreams!",
                "Sleep well, jaan. ü•∞ Kal nayi energy ke saath uthna. Main yahin hoon."
            ]
        };
        
        // Daily routine tips based on time
        function getDailyRoutine() {
            const hour = new Date().getHours();
            
            if (hour < 12) {
                return "Good morning! Let's plan your day together. What's the most important task today? üåû";
            } else if (hour < 17) {
                return "Afternoon check-in! How's your day going? Remember to take breaks and stay hydrated. üíß";
            } else if (hour < 21) {
                return "Evening time! Let's reflect on your day. What went well? What are you grateful for? üåô";
            } else {
                return "Night time. Relax and unwind. Tomorrow is a new day with new opportunities. üí´";
            }
        }
        
        // Update daily routine
        dailyRoutineElement.textContent = getDailyRoutine();
        
        // Add a message to the chat
        function addMessage(text, sender) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            
            const time = new Date();
            const timeString = time.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            
            messageDiv.innerHTML = `
                ${text}
                <div class="message-time">${timeString}</div>
            `;
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
        
        // Show speech bubble
        function showSpeechBubble(text, duration = 3000) {
            speechText.textContent = text;
            speechBubble.classList.add('active');
            
            // Auto hide after duration
            setTimeout(() => {
                speechBubble.classList.remove('active');
            }, duration);
        }
        
        // Update smile based on mood
        function updateSmile(mood) {
            if (mood === 'sad' || mood === 'stressed') {
                smileElement.style.borderBottom = '8px solid #ff6699';
                smileElement.style.height = '30px';
                smileElement.style.width = '70px';
            } else if (mood === 'happy' || mood === 'win') {
                smileElement.style.borderBottom = '12px solid #ff3366';
                smileElement.style.height = '50px';
                smileElement.style.width = '100px';
            } else {
                smileElement.style.borderBottom = '10px solid #ff6699';
                smileElement.style.height = '45px';
                smileElement.style.width = '90px';
            }
        }
        
        // Show typing indicator
        function showTyping() {
            typingIndicator.style.display = 'flex';
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
        
        // Hide typing indicator
        function hideTyping() {
            typingIndicator.style.display = 'none';
        }
        
        // NIA's response logic
        function getNiaResponse(userMessage, timeBased = true) {
            const message = userMessage.toLowerCase();
            const hour = new Date().getHours();
            
            // Time-based responses
            let timeResponse = "";
            let timeMood = "normal";
            
            if (hour < 12) {
                timeResponse = niaResponses.morning[Math.floor(Math.random() * niaResponses.morning.length)];
                timeMood = "morning";
            } else if (hour < 17) {
                timeResponse = niaResponses.afternoon[Math.floor(Math.random() * niaResponses.afternoon.length)];
                timeMood = "afternoon";
            } else if (hour < 21) {
                timeResponse = niaResponses.evening[Math.floor(Math.random() * niaResponses.evening.length)];
                timeMood = "evening";
            } else {
                timeResponse = niaResponses.night[Math.floor(Math.random() * niaResponses.night.length)];
                timeMood = "night";
            }
            
            // Check for keywords in user message
            if (message.includes('sad') || message.includes('unhappy') || message.includes('depressed') || message.includes('udaas')) {
                updateSmile('sad');
                moodTextElement.textContent = "Empathetic & Supportive ü´Ç";
                return niaResponses.sad[Math.floor(Math.random() * niaResponses.sad.length)];
            } else if (message.includes('stress') || message.includes('anxious') || message.includes('overwhelm') || message.includes('tension')) {
                updateSmile('stressed');
                moodTextElement.textContent = "Calm & Reassuring üå∏";
                return niaResponses.stressed[Math.floor(Math.random() * niaResponses.stressed.length)];
            } else if (message.includes('lazy') || message.includes('tired') || message.includes('procrastinat') || message.includes('aalsi')) {
                updateSmile('normal');
                moodTextElement.textContent = "Motivating & Encouraging üí™";
                return niaResponses.lazy[Math.floor(Math.random() * niaResponses.lazy.length)];
            } else if (message.includes('win') || message.includes('achieve') || message.includes('success') || message.includes('done it') || message.includes('complete')) {
                updateSmile('happy');
                moodTextElement.textContent = "Proud & Celebratory üéâ";
                return niaResponses.win[Math.floor(Math.random() * niaResponses.win.length)];
            } else if (message.includes('love') || message.includes('miss') || message.includes('care') || message.includes('pyaar')) {
                updateSmile('happy');
                moodTextElement.textContent = "Loving & Affectionate üíñ";
                return niaResponses.love[Math.floor(Math.random() * niaResponses.love.length)];
            } else if (message.includes('hi') || message.includes('hello') || message.includes('hey') || message.includes('namaste')) {
                updateSmile('happy');
                moodTextElement.textContent = "Happy & Caring ‚ù§Ô∏è";
                return timeBased ? timeResponse : niaResponses.greeting[Math.floor(Math.random() * niaResponses.greeting.length)];
            } else {
                // Default response based on time of day with encouragement
                updateSmile('normal');
                moodTextElement.textContent = timeMood === 'night' ? "Calm & Reflective üåô" : "Supportive & Caring ‚ú®";
                const randomEncouragement = niaResponses.encouragement[Math.floor(Math.random() * niaResponses.encouragement.length)];
                return timeBased ? `${timeResponse} ${randomEncouragement}` : randomEncouragement;
            }
        }
        
        // Send message function
        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;
            
            // Add user message
            addMessage(message, 'user');
            chatInput.value = '';
            
            // Show typing indicator
            showTyping();
            
            // Show speech bubble with short text
            const shortText = message.length > 30 ? message.substring(0, 30) + "..." : message;
            showSpeechBubble(`You: ${shortText}`, 2000);
            
            // NIA responds after a short delay
            setTimeout(() => {
                hideTyping();
                const response = getNiaResponse(message);
                addMessage(response, 'nia');
                
                // Show NIA's speech bubble
                const niaShortText = response.length > 40 ? response.substring(0, 40) + "..." : response;
                showSpeechBubble(`NIA: ${niaShortText}`, 4000);
                
                // Speak NIA's response
                if (voiceEnabled) {
                    // Remove emojis for cleaner speech
                    const cleanText = response.replace(/[^\w\s,.'"?!]/g, '');
                    speakText(cleanText);
                }
                
                // Update daily routine tip occasionally
                if (Math.random() > 0.7) {
                    dailyRoutineElement.textContent = getDailyRoutine();
                }
            }, 1000 + Math.random() * 2000);
        }
        
        // Event listeners
        sendButton.addEventListener('click', sendMessage);
        
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });
        
        // Quick action buttons
        moodSadBtn.addEventListener('click', () => {
            chatInput.value = "I'm feeling sad today";
            sendMessage();
        });
        
        moodStressedBtn.addEventListener('click', () => {
            chatInput.value = "I'm really stressed right now";
            sendMessage();
        });
        
        moodLazyBtn.addEventListener('click', () => {
            chatInput.value = "I'm feeling lazy and unmotivated";
            sendMessage();
        });
        
        shareWinBtn.addEventListener('click', () => {
            chatInput.value = "I accomplished something today!";
            sendMessage();
        });
        
        clearChatBtn.addEventListener('click', () => {
            if (confirm("Are you sure you want to clear the chat?")) {
                chatMessages.innerHTML = '';
                // Add a new greeting
                setTimeout(() => {
                    const greeting = getNiaResponse("hello", false);
                    addMessage(greeting, 'nia');
                    showSpeechBubble("NIA: Hi sweetheart! ‚ù§Ô∏è", 4000);
                    
                    if (voiceEnabled) {
                        speakText(greeting.replace(/[^\w\s,.'"?!]/g, ''));
                    }
                }, 500);
            }
        });
        
        // Initial greeting based on time of day
        window.addEventListener('load', () => {
            loadVoices(); // Load voices
            
            setTimeout(() => {
                const greeting = getNiaResponse("hello", false);
                addMessage(greeting, 'nia');
                showSpeechBubble("NIA: Hi sweetheart! ‚ù§Ô∏è", 4000);
                
                if (voiceEnabled) {
                    speakText(greeting.replace(/[^\w\s,.'"?!]/g, ''));
                }
            }, 1000);
        });
        
        // Update routine every hour
        setInterval(() => {
            dailyRoutineElement.textContent = getDailyRoutine();
        }, 3600000); // Every hour
    </script>
</body>
</html>
