<body>
    <div class="container">
        <div class="header">
            <h1 class="title">Heart Equation with Image</h1>
            <p class="subtitle">Mathematical Beauty with Your Photo</p>
            
            <div class="equation">
                \[y = x^{\frac{2}{3}} + 0.9 \sin(kx) \sqrt{3 - x^2}\]
            </div>
        </div>
        
        <div class="canvas-container">
            <canvas id="heartCanvas"></canvas>
            <div class="image-inside">
                <img id="heartImage" src="https://images.unsplash.com/photo-1511988617509-a57c8a288659?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80" alt="Heart Image">
            </div>
        </div>
        
        <div class="controls">
            <div class="control-group">
                <label class="control-label">Parameter k: <span id="kValue">8</span></label>
                <div class="slider-container">
                    <input type="range" min="1" max="30" value="8" step="0.5" class="slider" id="kSlider">
                    <div class="value-display" id="kDisplay">8.0</div>
                </div>
            </div>
            
            <div class="control-group">
                <label class="control-label">Heart Scale: <span id="sizeValue">120</span>%</label>
                <div class="slider-container">
                    <input type="range" min="50" max="200" value="120" class="slider" id="sizeSlider">
                    <div class="value-display" id="sizeDisplay">120%</div>
                </div>
            </div>
            
            <div class="control-group">
                <label class="control-label">Animation Speed: <span id="speedValue">3.5</span>x</label>
                <div class="slider-container">
                    <input type="range" min="1" max="15" value="3.5" step="0.5" class="slider" id="speedSlider">
                    <div class="value-display" id="speedDisplay">3.5x</div>
                </div>
            </div>
            
            <div class="control-group">
                <label class="control-label">Line Color</label>
                <div class="slider-container">
                    <input type="color" id="colorPicker" value="#ff3366">
                </div>
            </div>
            
            <div class="control-group">
                <label class="control-label">Image Controls</label>
                <div class="image-controls">
                    <button class="image-btn" id="uploadBtn">Upload Image</button>
                    <button class="image-btn" id="rotateBtn">Rotate Image</button>
                    <button class="image-btn" id="pulseBtn">Pulse Effect</button>
                    <input type="file" id="imageUpload" accept="image/*" style="display: none;">
                </div>
            </div>
            
            <div class="buttons">
                <button class="btn btn-primary" id="animateBtn">
                    <i class="fas fa-play"></i>
                    Toggle Animation
                </button>
                <button class="btn btn-secondary" id="resetBtn">
                    <i class="fas fa-redo"></i>
                    Reset
                </button>
            </div>
        </div>
        
        <div class="info">
            <h3>About This Heart Equation</h3>
            <p>This mathematical equation creates a single heart-shaped curve. It's defined for |x| ≤ √3 and produces only the upper half of a heart shape.</p>
            <p>The parameter <strong>k</strong> controls the oscillations in the curve. Higher values create more ripples in the single heart line.</p>
            <p>Upload your own image to place it inside the heart!</p>
        </div>
    </div>

    <script>
        // Get canvas and context
        const canvas = document.getElementById('heartCanvas');
        const ctx = canvas.getContext('2d');
        const heartImage = document.getElementById('heartImage');
        const imageContainer = document.querySelector('.image-inside');
        
        // Set canvas dimensions
        function setCanvasSize() {
            const container = canvas.parentElement;
            canvas.width = container.clientWidth;
            canvas.height = 450;
        }
        
        setCanvasSize();
        window.addEventListener('resize', setCanvasSize);
        
        // Parameters - Increased default values
        let k = 8; // Increased from 5
        let scale = 1.2; // Increased from 1.0
        let animationSpeed = 3.5; // Increased from 2.0
        let isAnimating = true; // Start animating by default
        let animationTime = 0;
        let lineColor = '#ff3366';
        let imageRotation = 0;
        let pulseEffect = false;
        let pulseScale = 1;
        let pulseDirection = 0.01;
        
        // Get DOM elements
        const kSlider = document.getElementById('kSlider');
        const kDisplay = document.getElementById('kDisplay');
        const kValue = document.getElementById('kValue');
        
        const sizeSlider = document.getElementById('sizeSlider');
        const sizeDisplay = document.getElementById('sizeDisplay');
        const sizeValue = document.getElementById('sizeValue');
        
        const speedSlider = document.getElementById('speedSlider');
        const speedDisplay = document.getElementById('speedDisplay');
        const speedValue = document.getElementById('speedValue');
        
        const colorPicker = document.getElementById('colorPicker');
        const animateBtn = document.getElementById('animateBtn');
        const resetBtn = document.getElementById('resetBtn');
        const uploadBtn = document.getElementById('uploadBtn');
        const rotateBtn = document.getElementById('rotateBtn');
        const pulseBtn = document.getElementById('pulseBtn');
        const imageUpload = document.getElementById('imageUpload');
        
        // Update parameter displays
        function updateDisplays() {
            kDisplay.textContent = k.toFixed(1);
            kValue.textContent = k.toFixed(1);
            
            sizeDisplay.textContent = `${Math.round(scale * 100)}%`;
            sizeValue.textContent = Math.round(scale * 100);
            
            speedDisplay.textContent = `${animationSpeed.toFixed(1)}x`;
            speedValue.textContent = animationSpeed.toFixed(1);
        }
        
        // Heart equation function
        function heartEquation(x, k) {
            return Math.pow(Math.abs(x), 2/3) + 0.9 * Math.sin(k * x) * Math.sqrt(Math.max(0, 3 - x * x));
        }
        
        // Draw only the upper half of the heart (one side)
        function drawHeart() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            const centerX = canvas.width / 2;
            const centerY = canvas.height / 2 + 30;
            const graphScale = Math.min(canvas.width, canvas.height) / 6 * scale;
            
            // Draw the single heart curve (upper half only)
            ctx.beginPath();
            
            let firstPoint = true;
            for (let x = -Math.sqrt(3); x <= Math.sqrt(3); x += 0.01) {
                // Increased animation effect with higher multiplier
                const animatedX = isAnimating ? x + Math.sin(animationTime * 3 + x * 3) * 0.2 : x;
                
                const y = heartEquation(animatedX, k);
                
                const plotX = centerX + x * graphScale;
                const plotY = centerY - y * graphScale;
                
                if (firstPoint) {
                    ctx.moveTo(plotX, plotY);
                    firstPoint = false;
                } else {
                    ctx.lineTo(plotX, plotY);
                }
            }
            
            // Style the line
            ctx.strokeStyle = lineColor;
            ctx.lineWidth = 4; // Thicker line
            ctx.shadowColor = lineColor;
            ctx.shadowBlur = 15; // Increased glow
            ctx.stroke();
            
            // Draw axes and grid
            drawGrid(centerX, centerY);
            
            // Update animation time - significantly increased speed
            if (isAnimating) {
                animationTime += 0.12 * animationSpeed; // Significantly increased
            }
            
            // Update pulse effect
            if (pulseEffect) {
                pulseScale += pulseDirection;
                if (pulseScale >= 1.2 || pulseScale <= 0.9) {
                    pulseDirection *= -1;
                }
                imageContainer.style.transform = `translate(-50%, -50%) scale(${pulseScale})`;
            } else {
                imageContainer.style.transform = `translate(-50%, -50%) rotate(${imageRotation}deg)`;
            }
        }
        
        // Draw grid and axes
        function drawGrid(centerX, centerY) {
            ctx.shadowBlur = 0;
            
            // Draw grid lines
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.15)';
            ctx.lineWidth = 1;
            
            // Vertical grid lines
            for (let x = 0; x < canvas.width; x += 40) {
                ctx.beginPath();
                ctx.moveTo(x, 0);
                ctx.lineTo(x, canvas.height);
                ctx.stroke();
            }
            
            // Horizontal grid lines
            for (let y = 0; y < canvas.height; y += 40) {
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(canvas.width, y);
                ctx.stroke();
            }
            
            // Draw axes
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.4)';
            ctx.lineWidth = 2;
            
            // X-axis
            ctx.beginPath();
            ctx.moveTo(0, centerY);
            ctx.lineTo(canvas.width, centerY);
            ctx.stroke();
            
            // Y-axis
            ctx.beginPath();
            ctx.moveTo(centerX, 0);
            ctx.lineTo(centerX, canvas.height);
            ctx.stroke();
            
            // Add labels
            ctx.fillStyle = '#ffd166';
            ctx.font = '12px Arial';
            ctx.fillText('x', canvas.width - 10, centerY - 5);
            ctx.fillText('y', centerX + 10, 15);
            
            // Add equation text
            ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
            ctx.font = '14px Arial';
            ctx.fillText(`y = x^(2/3) + 0.9 sin(${k.toFixed(1)}x) √(3 - x²)`, 15, 25);
            
            // Add animation indicator
            if (isAnimating) {
                ctx.fillStyle = '#4CAF50';
                ctx.font = 'bold 12px Arial';
                ctx.fillText(`● Animating (Speed: ${animationSpeed.toFixed(1)}x)`, 15, 45);
            }
        }
        
        // Animation loop
        function animate() {
            if (isAnimating) {
                drawHeart();
                requestAnimationFrame(animate);
            }
        }
        
        // Event listeners
        kSlider.addEventListener('input', function() {
            k = parseFloat(this.value);
            updateDisplays();
            drawHeart();
        });
        
        sizeSlider.addEventListener('input', function() {
            scale = parseFloat(this.value) / 100;
            updateDisplays();
            drawHeart();
        });
        
        speedSlider.addEventListener('input', function() {
            animationSpeed = parseFloat(this.value);
            updateDisplays();
        });
        
        colorPicker.addEventListener('input', function() {
            lineColor = this.value;
            drawHeart();
        });
        
        animateBtn.addEventListener('click', function() {
            isAnimating = !isAnimating;
            if (isAnimating) {
                animate();
                this.innerHTML = '<i class="fas fa-pause"></i> Pause Animation';
                this.style.background = '#4CAF50';
            } else {
                this.innerHTML = '<i class="fas fa-play"></i> Start Animation';
                this.style.background = '#ff6b6b';
            }
            drawHeart();
        });
        
        resetBtn.addEventListener('click', function() {
            k = 8;
            scale = 1.2;
            animationSpeed = 3.5;
            animationTime = 0;
            lineColor = '#ff3366';
            imageRotation = 0;
            pulseEffect = false;
            pulseScale = 1;
            pulseDirection = 0.01;
            
            kSlider.value = k;
            sizeSlider.value = scale * 100;
            speedSlider.value = animationSpeed;
            colorPicker.value = lineColor;
            
            updateDisplays();
            
            if (!isAnimating) {
                isAnimating = true;
                animateBtn.innerHTML = '<i class="fas fa-pause"></i> Pause Animation';
                animateBtn.style.background = '#4CAF50';
                animate();
            }
            
            heartImage.src = "https://images.unsplash.com/photo-1511988617509-a57c8a288659?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=80";
            imageContainer.style.transform = 'translate(-50%, -50%) rotate(0deg)';
            drawHeart();
        });
        
        uploadBtn.addEventListener('click', function() {
            imageUpload.click();
        });
        
        imageUpload.addEventListener('change', function(e) {
            if (e.target.files && e.target.files[0]) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    heartImage.src = event.target.result;
                };
                reader.readAsDataURL(e.target.files[0]);
            }
        });
        
        rotateBtn.addEventListener('click', function() {
            imageRotation += 45;
            imageContainer.style.transform = `translate(-50%, -50%) rotate(${imageRotation}deg)`;
        });
        
        pulseBtn.addEventListener('click', function() {
            pulseEffect = !pulseEffect;
            if (pulseEffect) {
                this.style.background = '#4CAF50';
                this.style.color = 'white';
            } else {
                this.style.background = '';
                this.style.color = '';
                imageContainer.style.transform = `translate(-50%, -50%) rotate(${imageRotation}deg)`;
            }
        });
        
        // Initialize with animation running
        updateDisplays();
        animate();
    </script>
</body>
</html>
